build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.24

executable G2
  -- other-modules:   
  -- other-extensions:    
  build-depends:         base >= 4.8 && < 5
                       , containers >= 0.5 && < 0.6
                       , ghc-paths >= 0.1 && < 0.2
                       , ghc
                       , mtl
                       , reducers
                       , parsec
                       , process
                       , unordered-containers
  default-extensions:  FlexibleContexts
  default-language:    Haskell2010
  ghc-options:         -O2 -threaded -fprof-auto -Wall
  hs-source-dirs:      src
  main-is:             Main.hs

test-suite test
  build-depends:         base >= 4.8 && < 5
                       , containers >= 0.5 && < 0.6
                       , ghc-paths >= 0.1 && < 0.2
                       , ghc
                       , reducers
                       , parsec
                       , process
                       , tasty >= 0.10
                       , tasty-hunit >= 0.9
                       , unordered-containers
  default-extensions:  FlexibleContexts
  default-language:    Haskell2010
  hs-source-dirs:      tests, src
  main-is:             Test.hs
  ghc-options:         -O2
                       -threaded
  type:                exitcode-stdio-1.0